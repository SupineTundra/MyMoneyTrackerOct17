<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lofstschool.mymoneytrackeroct17.ItemsFragment"
    android:background="@drawable/bg_pattern">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:padding="@dimen/marginItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="@dimen/floatButton"
        android:layout_height="@dimen/floatButton"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/stringSize"
        app:backgroundTint="@color/buttonColor"
        android:src="@drawable/ic_add_white_24dp"
           />


</FrameLayout>
